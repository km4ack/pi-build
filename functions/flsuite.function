	RIGTAR=$(curl -s http://www.w1hkj.com/files/flrig/ | grep .tar.gz | sed 's/.*ref="//;s/".*$//')
	RIGPKG=$(echo ${RIGTAR} | sed 's/.tar.gz//')

	#Download latest FLRIG
