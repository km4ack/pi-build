	wget --tries 2 --connect-timeout=60 http://www.w1hkj.com/files/flrig/${RIGTAR}
	tar -zxvf ${RIGTAR}
	rm ./*.gz #THIS IS DANGEROUS -- SEE SC2035

	#Build FLRIG
	cd ${RIGPKG} || return
	./configure --prefix=/usr/local --enable-static
	make
	sudo make install
	sudo ldconfig
